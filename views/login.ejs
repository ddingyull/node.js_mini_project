    <!-- nav bar -->
    <%- include('nav.html')  %>

  <div class="container mt-4">
    <h4 class="ml-2 my-3 text-center">Login</h4>
    <form action="/login" method="POST">
      <div class="form-floating mb-3" style="margin: 20px;">
        <input type="text" class="form-control" name="id">
        <label for="floatingInput">ID</label>
      </div>
      <div class="form-floating mb-3" style="margin: 20px;">
        <input type="text" class="form-control" name="pw">
        <label for="floatingInput">PW</label>
      </div>
        <button type="submit" class="btn btn-dark mt-4 ">login</button>
    </form>
  </div>

  <br/>
  <hr>

  <div class="container mt-5">
    <h4 class="ml-2 my-3 text-center">Membership</h4>
    <form action="/register" method="POST">
      <div class="form-floating mb-3" style="margin: 20px;">
        <input type="text" class="form-control" name="id">
        <label for="floatingInput">ID</label>
      </div>
      <div class="form-floating mb-3" style="margin: 20px;">
        <input type="text" class="form-control" name="pw">
        <label for="floatingInput">PW</label>
      </div>
      <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-dark mt-4">sign up</button>
      <div>
    </form>
  </div>



