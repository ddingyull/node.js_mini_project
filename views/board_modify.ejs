<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>write</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/main.css">
  </head>

  <body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>
    <!-- nav bar -->
    <%- include('nav.html')  %>

    <div class="inner">
      <div class="board_container">
        <div class="board_header">
          <h1 class="p-5" style="text-align:center"> Content Modify</h1>
        </div>
        <form action="/board/modify/title/<%=selectedBoard.title%>" method="POST" class="board_form">
          <div class="form-floating mb-3" style="margin: 20px;">
            <input type="text" class="form-control" name="title" value="<%= selectedBoard.title %>" required>
            <label for="floatingInput">제목</label>
          </div>
          <div class="form-floating mb-3" style="margin: 20px;">
            <input type="text" class="form-control" name="user" value="<%= selectedBoard.user %>">
            <label for="floatingInput">작성자</label>
          </div>
          <div class="form-floating mb-3" style="margin: 20px;">
            <input type="text" class="form-control" name="day" value="<%= selectedBoard.day %>">
            <label for="floatingInput">작성일</label>
          </div>
          <br>
          <button style="margin: 20px;" type="submit" class="btn btn-danger">글 수정하기</button>
        </form>
      </div>
    </div>
  </body>
</html>